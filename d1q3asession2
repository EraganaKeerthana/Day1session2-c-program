#include <stdio.h>

int main() {
    int n, i, fact = 1, sum = 0;

    printf("Enter a positive integer: ");
    scanf("%d", &n);

    for (i = 1; i <= n; i++) {
        fact *= i;
    }

    for (i = 1; i <= n; i++) {
        sum += i * (i + 1);
    }

    printf("Factorial of %d = %d\n", n, fact);
    printf("Sum of multiplication of all integers = %d\n", sum);

    return 0;
}
